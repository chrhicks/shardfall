{
    "name": "shardfall",
    "description": "Shardfall - A vertical mining idle game with incremental mechanics",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite --config vite/config.dev.mjs",
        "build": "vite build --config vite/config.prod.mjs",
        "preview": "vite preview --config vite/config.prod.mjs",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "format": "prettier --write src/**/*.ts",
        "typecheck": "tsc --noEmit"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@typescript-eslint/eslint-plugin": "^8.54.0",
        "@typescript-eslint/parser": "^8.54.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "prettier": "^3.8.1",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.54.0",
        "vite": "^6.3.1"
    },
    "dependencies": {
        "break_infinity.js": "^2.2.0",
        "phaser": "^3.90.0",
        "phaser3-rex-plugins": "^1.80.17",
        "terser": "^5.39.0"
    }
}
